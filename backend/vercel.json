{
    "version": 2,
    "installCommand": "npm install --legacy-peer-deps",
    "builds": [
      {
        "src": "/api/updateTournaments.js",
        "use": "@vercel/node"
      },
      {
        "src": "/api/scheduleMatches.js",
        "use": "@vercel/node"
      },
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*",
        "use": "@vercel/static"
      }
    ],
    "crons": [
      {
        
        "path": "/api/updateTournaments",
        "schedule": "0 */12 * * *"
      },
      {
        "path": "/api/scheduleMatches",
        "schedule": "0 0 * * *"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }
  